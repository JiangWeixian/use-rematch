{
  "name": "@use-rematch/use",
  "version": "0.0.0",
  "license": "MIT",
  "homepage": "https://github.com/JiangWeixian/use-rematch#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JiangWeixian/use-rematch.git",
    "directory": "packages/use"
  },
  "bugs": {
    "url": "https://github.com/JiangWeixian/use-rematch/issues",
    "email": "jiangweixian1994@gmail.com"
  },
  "author": {
    "name": "JW",
    "email": "jiangweixian1994@gmail.com",
    "url": "https://twitter.com/jiangweixian"
  },
  "exports": {
    "./package.json": "./package.json",
    "./basic": {
      "require": "./dist/basic.cjs",
      "types": "./dist/basic.d.ts",
      "import": "./dist/basic.mjs"
    },
    ".": {
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "dependencies": {
    "functional-md": "^1.1.0"
  },
  "devDependencies": {
    "@aiou/eslint-config": "^0.5.1",
    "@changesets/cli": "^2.21.1",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@testing-library/jest-dom": "5.16.4",
    "@testing-library/react": "12.1.5",
    "@testing-library/react-hooks": "8.0.0",
    "@testing-library/user-event": "13.5.0",
    "@types/node": "^17.0.22",
    "@types/react": "^18.0.8",
    "@types/react-dom": "^18.0.0",
    "@use-rematch/core": "workspace:^0.1.0",
    "@vitejs/plugin-react": "^1.3.1",
    "@vitest/ui": "latest",
    "jsdom": "latest",
    "prettier": "2.4.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-test-renderer": "^18.1.0",
    "rimraf": "3.0.2",
    "rollup": "2.58.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-condition-exports": "^1.3.1",
    "rollup-plugin-multi-input": "^1.3.1",
    "rollup-plugin-node-externals": "^4.0.0",
    "rollup-plugin-size": "^0.2.2",
    "rollup-plugin-typescript2": "0.30.0",
    "tslib": "2.3.1",
    "typescript": "4.4.3",
    "vite": "^2.9.5",
    "vitest": "^0.10.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "scripts": {
    "build": "rimraf dist && rollup -c --silent",
    "dev": "rollup -c -w --silent",
    "test": "vitest",
    "pretest": "pnpm run build",
    "release": "pnpm run build && np --no-cleanup --yolo --no-publish --any-branch",
    "ci:version": "pnpx changeset version",
    "ci:publish": "pnpx changeset publish",
    "ci:snapshot": "pnpx changeset version --snapshot beta",
    "ci:prerelease": "pnpm run build && pnpx changeset publish --tag beta",
    "lint:fix": "eslint . --fix"
  },
  "typesVersions": {
    "*": {
      "basic": [
        "dist/basic.d.ts"
      ]
    }
  }
}
